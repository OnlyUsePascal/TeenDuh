<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- Background shape for the button -->
  <item>
    <shape android:shape="rectangle">
      <size
        android:width="50dp"
        android:height="50dp" />
      <corners android:radius="50dp" />
      <solid android:color="#FFFDFC" />
    </shape>
  </item>

  <!-- Icon at the center of the button -->
  <item
    android:width="40dp"
    android:height="40dp"
    android:drawable="@drawable/baseline_favorite_24"
    android:gravity="center"
    
    />

</layer-list>
