<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".view.activity.admin.PieChartActivity">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/my_secondary"
    android:orientation="horizontal"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
      android:id="@+id/back_button"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginStart="16dp"
      android:src="@drawable/ic_baseline_clear_24"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:gravity="center"
      android:text="Billing"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:padding="5dp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
      android:id="@+id/card_view1"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_columnWeight="1"
      android:layout_margin="5dp"
      android:layout_gravity="center"
      app:cardBackgroundColor="@color/card_selected">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/dashline_unselected">


        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="5 Likes"
          android:textSize="20sp"
          android:gravity="center"/>

        <ImageView
          android:layout_marginTop="10dp"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:src="@drawable/one_like"
          android:layout_gravity="center"/>


        <RelativeLayout
          android:id="@+id/relativeLayout1"
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/my_secondary">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="5 $"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            />

        </RelativeLayout>
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

      android:id="@+id/card_view2"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_columnWeight="1"
      android:layout_margin="5dp"
      android:alpha="0.5"
      android:layout_gravity="center"
      app:cardBackgroundColor="@color/card_unselected"
      >

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/dashline_unselected">


        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="10 Likes"
          android:textSize="20sp"
          android:gravity="center"/>

        <ImageView
          android:layout_marginTop="10dp"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:src="@drawable/two_like"
          android:layout_gravity="center"/>


        <RelativeLayout
          android:id="@+id/relativeLayout2"
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/seed">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="10 $"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            />

        </RelativeLayout>
      </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView

      android:id="@+id/card_view3"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_columnWeight="1"
      android:layout_margin="5dp"
      android:alpha="0.5"
      android:layout_gravity="center"
      app:cardBackgroundColor="@color/card_unselected">


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/dashline_unselected">


        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="50 Likes"
          android:textSize="20sp"
          android:gravity="center"/>

        <ImageView
          android:layout_marginTop="10dp"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:src="@drawable/three_like"
          android:layout_gravity="center"/>

        <RelativeLayout
          android:id="@+id/relativeLayout3"
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/seed">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="50 $"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            />

        </RelativeLayout>
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
      android:id="@+id/process_payment"
      android:layout_width="300dp"
      android:layout_height="50dp"
      android:layout_marginTop="16dp"
      android:text="Process Payment"
      android:layout_gravity="center"
      android:textSize="20sp" />




  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>