<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6DCF2"
    tools:context=".view.activity.ShowMoreInfo">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/relativeLayout"
        android:background="@color/white">
        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="Joun Nguyen"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:text="19"
            android:layout_marginLeft="200dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="25dp" />
        <ImageView
            android:id="@+id/iconDown"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/arrow_down" />
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/relativeLayout"
    android:id="@+id/scrollView"
    android:fillViewport="true"
    android:paddingBottom="50dp"
    android:layout_marginTop="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:id="@+id/firstStage"
                android:layout_height="5dp"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    android:src="@color/white" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/secondStage"
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/secondStageImage"
                    android:layout_width="30dp"
                    android:layout_height="5dp"
                    android:src="@color/white"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/thirdStage"
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="5dp"
                    android:src="@color/white"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/fourthStage"
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="5dp"
                    android:src="@color/white"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/fifthStage"
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="5dp"
                    android:src="@color/white"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/sixthStage"
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="5dp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/viewPager2"
        android:layout_marginTop="0dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_below="@+id/viewPager2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView1"
        android:layout_below="@+id/viewPager2"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">
        <TextView
            android:drawableLeft="@drawable/baseline_search_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Looking for"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/lookingFor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Short-term, but long-term OK"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view2"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:orientation="vertical">
                <TextView
                    android:drawableLeft="@drawable/baseline_info_24"
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Essentials"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/distance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="9 kilometers away"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp" />
                <TextView
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Single, 19"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp" />
                <TextView
                    android:id="@+id/sexual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Woman"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView2"
            android:layout_below="@+id/viewPager2"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:orientation="vertical">
                <TextView
                    android:drawableLeft="@drawable/baseline_bookmark_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basics"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Zodiac"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/zodiac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pisces"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="10dp"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Education"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="University of California, Irvine"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardView1"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"

                android:orientation="vertical">
                <TextView
                    android:drawableLeft="@drawable/baseline_bookmark_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lifestyle"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"

                    android:text="Diet"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/diet"
                    android:text="Vegetarian"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="10dp"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Drinks"
                    android:textSize="15dp"
                    android:id="@+id/drinks"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Socially"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Smokes"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/smokes"
                    android:text="Smoke weed every day!"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>
    </RelativeLayout>
</ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/cancel_action"
            android:layout_marginHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cancel_layout_main"
            android:gravity="center"
            />

        <TextView
            android:layout_marginHorizontal="20dp"
            android:id="@+id/super_like_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/super_like_layout"
            android:gravity="center"/>
        <TextView
            android:layout_marginHorizontal="20dp"
            android:id="@+id/like_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/like_layout"
            />


    </LinearLayout>



</RelativeLayout>