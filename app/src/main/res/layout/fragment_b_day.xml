<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.NameFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your B-day?"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Day"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Month"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginStart="30dp"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Year"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginStart="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/numberPickerDay"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="40dp"

                />
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/numberPickerMonth"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="30dp"

                />
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/numberPickerYear"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="30dp"
                />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your profile shows your age, not your birthday."
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            />
        <RelativeLayout
            android:id="@+id/nextButton"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:gravity="bottom|center_horizontal"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textview"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="72dp"
                android:background="@drawable/btn_layout"
                android:gravity="center"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>