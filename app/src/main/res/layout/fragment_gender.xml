<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".view.fragment.signup.NameFragment">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="20dp"
      android:layout_marginTop="10dp"
      android:text="What's is your gender?"
      android:textSize="30dp"
      android:textStyle="bold" />

    <RadioGroup

      android:id="@+id/radioGroup"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="20dp"
      android:layout_marginTop="40dp"
      android:orientation="vertical"
      android:paddingBottom="10dp">

      <RadioButton
        android:id="@+id/radioButtonMen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/radio_selector"
        android:button="@android:color/transparent"
        android:elevation="4dp"
        android:padding="10dp"
        android:text="Man"
        android:textColor="@drawable/text_color"
        android:textSize="20dp" />

      <RadioButton
        android:id="@+id/radioButtonWomen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/radio_selector"
        android:button="@android:color/transparent"
        android:elevation="4dp"
        android:padding="10dp"
        android:text="Woman"
        android:textColor="@drawable/text_color"
        android:textSize="20dp" />
      <!--        <RadioButton-->
      <!--            android:padding="10dp"-->
      <!--            android:id="@+id/radioButtonOther"-->
      <!--            android:layout_width="match_parent"-->
      <!--            android:layout_height="wrap_content"-->
      <!--            android:text="More options"-->
      <!--            android:textSize="20dp"-->
      <!--            android:button="@android:color/transparent"-->
      <!--            android:background="@drawable/radio_selector"-->
      <!--            android:textColor="@drawable/text_color"-->
      <!--            android:elevation="4dp"-->
      <!--            android:layout_marginTop="10dp"-->
      <!--            android:layout_marginHorizontal="20dp"/>-->
    </RadioGroup>


    <RelativeLayout
      android:id="@+id/relativeLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <!-- Aligning at the bottom and centering horizontally -->
      <CheckBox
        android:id="@+id/radioButtonShowInfo"
        style="@style/Widget.Material3.CompoundButton.RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp"
        android:text="Show the gender in the profile"
        android:textSize="15dp" />

      <TextView
        android:id="@+id/nextButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp"
        android:background="@drawable/dashline_unselected"
        android:enabled="false"
        android:gravity="center"
        android:text="Next"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

      <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:background="#E8E9EE" />

    </RelativeLayout>


  </LinearLayout>

</FrameLayout>